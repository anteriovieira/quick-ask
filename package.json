{
  "name": "quickask-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "bump:extension": "npm run bump --workspace=apps/extension",
    "package:extension": "npm run package --workspace=apps/extension",
    "done": "npm run bump:extension && npm run package:extension"
  }
}